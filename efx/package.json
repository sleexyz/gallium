{
  "name": "efx",
  "version": "0.2.1",
  "description": "Effectful state management system for React applications",
  "main": "lib/index.js",
  "repository": "https://github.com/sleexyz/gallium/tree/master/efx",
  "author": "Sean Lee",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "^0.59.0",
    "flow-copy-source": "^1.2.1",
    "flow-typed": "^2.2.3",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.0.2",
    "prettier": "^1.8.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ]
  },
  "scripts": {
    "build": "yarn clean && yarn build-babel && yarn build-flow",
    "clean": "rm -rf ./lib",
    "build-babel": "babel src --out-dir lib --ignore '*.test.js,test_utils.js'",
    "build-flow": "flow-copy-source --ignore '*.test.js' --ignore 'test_utils.js' src lib",
    "check-all": "flow && yarn test && yarn format-check",
    "format": "prettier --write 'src/**/*.js'",
    "format-check": "prettier -l 'src/**/*.js'",
    "test": "jest"
  }
}
